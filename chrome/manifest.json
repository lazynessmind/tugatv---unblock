{
  "name": "tuga.tv - unblock",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Esta extensão faz com que o site (tuga.tv) dê premissão de ver o filme mesmo com AdBlock instalado.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "https://*.tuga.tv/filme"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}